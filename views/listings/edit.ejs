<% layout('/layouts/boilerplate.ejs')%>



<body>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="form-container">
                    <h2 class="form-header text-center">Edit The Listing</h2>
                    
                    <form  method="post" class="needs-validation" action="/listings/<%= listing._id%>?_method=PUT" novalidate enctype="multipart/form-data">
                        <!-- Title Field -->
                        <div class="mb-4">
                            <label for="listingTitle" class="form-label">Title <span class="text-danger">*</span></label>
                            <input type="text" class="form-control form-control-lg" id="listingTitle" 
                                   name="listing[title]" value="<%=listing.title%>" placeholder="Enter a descriptive title for your listing" required>
                            <div class="invalid-feedback">
                                Please provide a title for your listing.
                            </div>
                        </div>

                        <!-- Description Field -->
                        <div class="mb-4">
                            <label for="listingDescription" class="form-label">Description <span class="text-danger">*</span></label>
                            <textarea class="form-control" id="listingDescription" name="listing[description]" 
                                      rows="5" placeholder="Describe your item in detail" required ><%=listing.description%></textarea>
                            <div class="invalid-feedback">
                                Please provide a description for your listing.
                            </div>
                            <div class="form-text">Be specific about condition, features, and any included accessories.</div>
                        </div>

                        <!-- Image Details -->
                        <div class="mb-4">
                            <label class="form-label">Image Details</label>
                            <input type="file" class="form-control" name="listing[image]" >
                            <div class="form-text">Upload your image</div>
                        </div>

                        <!-- Price Field -->
                        <div class="mb-4">
                            <label for="listingPrice" class="form-label">Price (&#8377;) <span class="text-danger">*</span></label>
                            <div class="input-group">
                                <span class="input-group-text">&#8377;</span>
                                <input type="number" class="form-control" id="listingPrice" name="listing[price]" value="<%=listing.price%>"
                                       placeholder="0.00" min="0" step="0.01" required >
                            </div>
                            <div class="invalid-feedback">
                                Please provide a valid price.
                            </div>
                        </div>

                        <!-- Location Fields -->
                        <div class="row mb-4">
                            <div class="col-md-6">
                                <label for="listingLocation" class="form-label">Location <span class="text-danger">*</span></label>
                                <input type="text" class="form-control" id="listingLocation" name="listing[location]" value="<%=listing.location%>"
                                       placeholder="Enter your city" required >
                                <div class="invalid-feedback">
                                    Please provide your location.
                                </div>
                            </div>
                            <div class="col-md-6">
                                <label for="listingCountry" class="form-label">Country <span class="text-danger">*</span></label>
                                <input type="text" class="form-control" id="listingCountry" name="listing[country]" value="<%=listing.country%>"
                                       placeholder="Enter your country" required >
                                <div class="invalid-feedback">
                                    Please provide your country.
                                </div>
                            </div>
                        </div>

                        <!-- Submit Button -->
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-submit btn-lg">
                                Edit Listing
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <script src="/js/form.js"></script>
</body>