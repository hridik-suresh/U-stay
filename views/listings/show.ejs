<% layout('/layouts/boilerplate.ejs')%>

<body>

<div class="container show-container">
    <div class="row show-row">
        <div class="col-md-6 show-col-img">
            <img src="<%=listing.image.url%>" class="show-img img-fluid" alt="<%=listing.title%>">
        </div>
        <div class="col-md-6 show-col-detail">
            <h5><%=listing.title%></h5>
            <p><i>Owned by: <%=listing.owner.username %></i></p>
            <h6><span class="fw-bold">Price:</span> &#8377;<%=listing.price.toLocaleString('en-IN')%>/night</h6>
            <h6><span class="fw-bold">Location:</span> <%=listing.location%>, <%=listing.country%></h6>
            <p><span class="fw-bold">Description:</span> <%=listing.description%></p>
            <%if(currentUser && currentUser._id.equals(listing.owner._id)){%>
            <div class="show-btns">
                <a href="/listings/<%=listing._id%>/edit" class="btn show-edit">Edit</a>
                <form method="post" action="/listings/<%=listing._id%>?_method=DELETE" class="d-inline">
                    <button class="btn show-dlt">Delete</button>
                </form>
            </div>
            <%}%>
        </div>
    </div>
    
    <hr class="my-4">

    <div class="reviews-section">
        <%if(currentUser){%>
        <h4>Leave a Review</h4>
        <form action="/listings/<%= listing._id%>/reviews" method="post" class="review-form">
            <div class="mb-3">
                <label for="rating" class="form-label">Rating</label>
                <fieldset class="starability-grow">
                    <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1" checked aria-label="No rating." />
                    <input type="radio" id="first-rate1" name="review[rating]" value="1" />
                    <label for="first-rate1" title="Terrible">1 star</label>
                    <input type="radio" id="first-rate2" name="review[rating]" value="2" />
                    <label for="first-rate2" title="Not good">2 stars</label>
                    <input type="radio" id="first-rate3" name="review[rating]" value="3" />
                    <label for="first-rate3" title="Average">3 stars</label>
                    <input type="radio" id="first-rate4" name="review[rating]" value="4" />
                    <label for="first-rate4" title="Very good">4 stars</label>
                    <input type="radio" id="first-rate5" name="review[rating]" value="5" />
                    <label for="first-rate5" title="Amazing">5 stars</label>
                </fieldset>
            </div>
            <div class="mb-3">
                <label for="comment" class="form-label">Comments</label>
                <textarea name="review[comment]" id="comment" class="form-control" rows="4"></textarea>
            </div>
            <button type="submit" class="btn btn-submit">Submit</button>
        </form>
        
        <hr class="my-4">
        <%}%>
        <h4>All Reviews</h4>
        <div class="row">
            <% for(let review of listing.reviews){%>
                <div class="col-12 review-item">
                    <p><i>@<%=review.author.username%></i></p>
                    <p class="starability-result" data-rating="<%=review.rating %>"></p>
                    <p class="mb-0"><small class="text-muted">Comment:</small> <%=review.comment %></p>
                    <form method="post" action="/listings/<%= listing._id%>/reviews/<%=review._id%>?_method=DELETE"><button class="btn btn-sm review-dlt"><i class="fa-solid fa-trash"></i></button></form>
                </div>
            <%}%>
        </div>
    </div>
</div>
</body>
