<% layout('/layouts/boilerplate.ejs')%>

<body>

<div class="container show-container">
    <div class="row show-row">
        <div class="col-md-6 show-col-img">
            <img src="<%=listing.image.url%>" class="show-img img-fluid" alt="<%=listing.title%>">
        </div>
        <div class="col-md-6 show-col-detail">
            <h5><%=listing.title%></h5>
            <h6><span class="fw-bold">Price:</span> &#8377;<%=listing.price.toLocaleString('en-IN')%>/night</h6>
            <h6><span class="fw-bold">Location:</span> <%=listing.location%>, <%=listing.country%></h6>
            <p><span class="fw-bold">Description:</span> <%=listing.description%></p>
            <div class="show-btns">
                <a href="/listings/<%=listing._id%>/edit" class="btn show-edit">Edit</a>
                <form method="post" action="/listings/<%=listing._id%>?_method=DELETE" class="d-inline">
                    <button class="btn show-dlt">Delete</button>
                </form>
            </div>
        </div>
    </div>
    
    <hr class="my-4">

    <div class="reviews-section">
        <h4>Leave a Review</h4>
        <form action="/listings/<%= listing._id%>/reviews" method="post" class="review-form">
            <div class="mb-3">
                <label for="rating" class="form-label">Rating</label>
                <input type="range" min="1" max="5" id="rating" name="review[rating]" class="form-range rating-input">
            </div>
            <div class="mb-3">
                <label for="comment" class="form-label">Comments</label>
                <textarea name="review[comment]" id="comment" class="form-control" rows="4"></textarea>
            </div>
            <button type="submit" class="btn btn-submit">Submit</button>
        </form>
        
        <hr class="my-4">
        
        <h4>All Reviews</h4>
        <div class="row">
            <% for(let review of listing.reviews){%>
                <div class="col-12 review-item">
                    <p class="mb-1"><small class="text-muted">Rating:</small> <strong><%=review.rating %> / 5</strong></p>
                    <p class="mb-0"><small class="text-muted">Comment:</small> <%=review.comment %></p>
                    <form method="post" action="/listings/<%= listing._id%>/reviews/<%=review._id%>?_method=DELETE"><button class="btn btn-sm review-dlt"><i class="fa-solid fa-trash"></i></button></form>
                </div>
            <%}%>
        </div>
    </div>
</div>
</body>
